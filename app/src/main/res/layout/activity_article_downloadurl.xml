<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/activity_download_urls"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_above="@+id/download_uri_layout"
              android:orientation="vertical">

    <include layout="@layout/common_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/space_16"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/baidu_pwd_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/baidu_pwd"
            android:textSize="19sp"/>

        <Button
            android:id="@+id/baidu_url_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            android:background="@color/colorLightBlue"
            android:src="@drawable/button_shape"
            android:text="@string/baidu_uri"
            android:textColor="@color/colorWhite"/>

        <Button
            android:id="@+id/cili_url_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            android:background="@color/colorLightBlue"
            android:src="@drawable/button_shape"
            android:text="@string/magnet_uri"
            android:textColor="@color/colorWhite"/>

        <Button
            android:id="@+id/torrent_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            android:background="@color/colorLightBlue"
            android:src="@drawable/button_shape"
            android:text="@string/torrent"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>
</LinearLayout>

